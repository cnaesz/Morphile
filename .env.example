# .env.example - Rename this file to .env and fill in your values.

# --- Core Bot Settings ---
BOT_TOKEN="YOUR_BOT_TOKEN_HERE"
ADMIN_IDS="YOUR_TELEGRAM_ID_HERE" # Your numeric Telegram User ID. Multiple IDs can be comma-separated.

# --- Environment & Debugging ---
DEBUG="true" # Set to "true" for detailed logging, "false" for production.
LOCAL_TEST_MODE="false" # Set to "true" to enable local testing commands like /test_upload.

# --- File Serving & URLs ---
# For local testing, BASE_URL should match the local server (e.g., http://localhost:8080).
# For production, this should be your public domain (e.g., https://your.domain.com/files).
BASE_URL="http://localhost:8080"
LOCAL_SERVER_PORT="8080" # Port for the local_server.py script.

# (Optional) Directory for temporary downloads. Defaults to "downloads".
# DOWNLOAD_DIR="downloads"
# (Optional) Directory for final, public files. Defaults to "public_files".
# PUBLIC_FILES_DIR="public_files"


# --- Database & Services ---
MONGO_URI="mongodb://localhost:27017/"
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"

