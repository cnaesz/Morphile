# --- Telegram Bot Configuration ---
# Your bot token from BotFather
BOT_TOKEN="YOUR_BOT_TOKEN_HERE"

# --- Development Settings ---
# Set to "true" for detailed logging, "false" for production
DEBUG="true"

# --- Database ---
# Connection URI for your MongoDB instance
MONGO_URI="mongodb://localhost:27017/"

# --- Administration ---
# Your numeric Telegram User ID. Multiple IDs can be comma-separated (e.g., 123,456)
ADMIN_IDS="YOUR_TELEGRAM_ID_HERE"

# --- Webhook/File Server (Optional, for local testing with ngrok) ---
# The public URL generated by ngrok for the web app (e.g., https://xxxx-xxxx.ngrok.io)
# NGINX_URL should point to the file serving endpoint (e.g., https://xxxx-xxxx.ngrok.io/files)
WEB_APP_URL="http://localhost:5001/app"
NGINX_URL="http://localhost:8080/files"
ZARINPAL_CALLBACK="http://localhost:5001/verify"
ZARINPAL_MERCHANT=""

# --- Job Queue & Local Testing ---
# Set to "true" to enable local testing mode and commands like /test_upload
LOCAL_TEST_MODE="false"

# Redis connection details for the background task queue
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"
